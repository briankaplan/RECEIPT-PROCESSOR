{
    "gmail": {
        "your.email@gmail.com": {
            "client_file": "gmail_tokens/your_email_at_gmail_com.json",
            "token_file": "gmail_tokens/your_email_at_gmail_com.pickle"
        }
    },
    "mongodb": {
        "uri": "mongodb+srv://username:password@your-cluster.mongodb.net",
        "database": "expense_tracker",
        "expenses_collection": "expenses",
        "receipts_collection": "receipts",
        "transactions_collection": "transactions",
        "matches_collection": "matches",
        "analytics_collection": "analytics"
    },
    "r2": {
        "endpoint": "https://<account_id>.r2.cloudflarestorage.com",
        "access_key_id": "your_access_key_id",
        "secret_access_key": "your_secret_access_key",
        "bucket": "your-bucket-name",
        "public_url": "https://pub-<hash>.r2.dev"
    },
    "sheets": {
        "spreadsheet_id": "your_spreadsheet_id",
        "sheet_name": "Expenses"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "expense_processor.log"
    },
    "matching": {
        "merchant": {
            "weight": 0.5,
            "threshold": 0.8
        },
        "amount": {
            "weight": 0.3,
            "tolerance": 0.01
        },
        "date": {
            "weight": 0.2,
            "max_days_diff": 7
        }
    },
    "processing": {
        "cleanup_after_days": 30
    }
}